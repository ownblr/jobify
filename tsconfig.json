{
  "compilerOptions": {
    "strict": false,  // Disable all strict type-checking options
    "noImplicitAny": false,  // Allow expressions and declarations with an implied 'any' type
    "strictNullChecks": false,  // Disable strict checking of null and undefined in types
    "strictFunctionTypes": false,  // Disable strict checking of function types
    "strictBindCallApply": false,  // Disable strict checking of the bind, call, and apply methods on functions
    "strictPropertyInitialization": false, // Disable checking class property initializations
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
